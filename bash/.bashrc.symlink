[ -z "$PS1" ] && return

source "$HOME/.dotfiles/shell/loader"
source "$HOME/.dotfiles/shell/aliases"

for script in "options" "completions" "prompt"; do
  source "$BASH_DOTFILES/${script}.bash"
done

source_if_exists "$CHRUBY_PREFIX/share/chruby/chruby.sh"
source_if_exists "$NVM_DIR/nvm.sh"
source_if_exists "$DOTFILES/z/z.sh"

# local
source_if_exists "$HOME/.bashrc.local"
