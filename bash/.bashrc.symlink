echo "Sourced .bashrc"
source "$HOME/.dotfiles/shell/loader"

[ -z "$PS1" ] && return

# bash options
set -o notify
shopt -s checkwinsize # useful for tmux
shopt -s histappend
shopt -s nocaseglob
shopt -s extglob
shopt -s cdspell
shopt -s cdable_vars

source_if_exists "$BREW_PREFIX/share/chruby/chruby.sh"
source_if_exists "$DOTFILES/z/z.sh"

for script in "completions" "prompt"; do
  source "$BASH_DOTFILES/${script}.bash"
done

# local
source_if_exists "$HOME/.bashrc.local"
