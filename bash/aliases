# ~/.dotfiles/.bash_aliases
# sourced by both .zshrc and .bashrc, so keep it bash compatible

alias _="sudo"

alias e="vim"
alias vi="vim"
alias untar="tar -zxvf "
alias reload="exec $SHELL"

# paths and dirs
alias ..='cd ..'
alias ....='cd ../..'
alias dirs="dirs -v"                  # default to vert, use -l for list
alias l="ls -l"

# function-type aliases
alias publicip="curl icanhazip.com"

# default flags for programs
alias df="df -h"
alias ln="ln -v"
alias rsync="rsync -hP --exclude-from=$HOME/.cvsignore"
alias wget="wget --no-check-certificate"

# tmux
alias remux="if tmux has 2>/dev/null; then tmux attach; else tmux new $SHELL; fi"
alias demux="tmux detach"

# quick edits
alias vimrc="vim ~/.vimrc"
alias gvimrc="vim ~/.gvimrc"
alias bashrc="vim ~/.bashrc"
alias lbashrc="vim ~/.bashrc.local"
alias aliases="vim $BASH_DOTFILES/aliases"
alias zshrc="vim ~/.zshrc"
alias zshenv="vim ~/.zshenv"
alias lzshrc="vim ~/.zshrc.local"
alias lzshenv="vim ~/.zshenv.local"
alias zaliases="vim $ZDOTDIR/aliases"
alias hosts="vim /etc/hosts"
alias phpini="vim $PHP_INI"
alias apacheconf="vim $APACHE_CONF/httpd.conf"
alias vhosts="vim $APACHE_CONF/extra/httpd-vhosts.conf"

# server
alias rapache="sudo apachectl -k restart"
alias pyserve="python -m SimpleHTTPServer"

##
# os specific
case "$OSTYPE" in
  darwin*)  source "$BASH_DOTFILES/aliases-osx"
            ;;
  linux*)   source "$BASH_DOTFILES/aliases-linux"
            ;;
esac
