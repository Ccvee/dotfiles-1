# ~/.dotfiles/.bash_aliases
# sourced by both .zshrc and .bashrc, so keep it bash compatible

alias dotfiles="$DOTFILES/bootstrap.sh"
alias _="sudo"
alias untar="tar -zxvf "
alias reload="exec $SHELL"

# paths and dirs
alias ..='cd ..'
alias ....='cd ../..'
alias cd..='cd ..'
alias dirs="dirs -v"                  # default to vert, use -l for list
alias l="ls -l"

# function-type aliases
alias publicip="curl icanhazip.com"

# default flags for programs
alias df="df -h"
alias ln="ln -v"
alias rsync="rsync -hP --exclude-from=$HOME/.cvsignore"
alias wget="wget --no-check-certificate"

# tmux
alias remux="if tmux has 2>/dev/null; then tmux attach; else tmux new $SHELL; fi"
alias demux="tmux detach"

# quick edits
alias paths="e $BASH_DOTFILES/paths"
alias vimrc="e ~/.vimrc"
alias gvimrc="e ~/.gvimrc"
alias bashrc="e ~/.bashrc"
alias lbashrc="e ~/.bashrc.local"
alias aliases="e $BASH_DOTFILES/aliases"
alias zshrc="e ~/.zshrc"
alias zshenv="e ~/.zshenv"
alias lzshrc="e ~/.zshrc.local"
alias lzshenv="e ~/.zshenv.local"
alias zaliases="e $ZDOTDIR/aliases"

alias hosts="e /etc/hosts"

# php
alias phpini="e $PHP_INI"
alias phpver="php -v | sed 1q | awk '{print \$2}'"
alias phpminorver="phpver | awk -F=\".\" '{split(\$0,a,\".\"); print a[1]\"\.\"a[2]}'"

# server
alias vhosts="e $APACHE_CONF/extra/httpd-vhosts.conf"
alias apacheconf="e $APACHE_CONF/httpd.conf"
alias rapache="sudo apachectl -k restart"
alias pyserve="python -m SimpleHTTPServer"

##
# os specific
case "$OSTYPE" in
  darwin*)  source "$BASH_DOTFILES/aliases-osx"
            ;;
  linux*)   source "$BASH_DOTFILES/aliases-linux"
            ;;
esac
