# shell/aliases
# Not run by loader
# Sourced by both .zshrc and .bashrc, so keep it bash compatible

export DKO_SOURCE="$DKO_SOURCE -> shell/aliases"

# paths and dirs
alias ..="cd .."
alias ....="cd ../.."
alias cd..="cd .."
alias cdd="cd \${DOTFILES}"
alias cdv="cd \${VIM_DOTFILES}"
alias dirs="dirs -v"                  # default to vert, use -l for list
alias tree="tree -C"

# git
alias g="git"
alias g-="git co -"
alias gb="git branch --verbose"
alias gi="git ink"
alias gg="git grep --line-number --break --heading"
alias gl="git l"
alias gpo="git push origin"

# bin
alias a="atom"
alias ag="ag --path-to-agignore \"\${DOTFILES}/ag/agignore\""
alias be="bundle exec"
alias bfy="browserify"
alias bun="bundle"
alias cb="cdbk"
alias cm="composer"
alias cap="bundle exec cap"
alias df="df -h"
alias f="find"
alias grep="grep --color=auto"
alias gw="grunt watch"
alias irc="ssh dsmchroot -t -- /bin/sh -c 'tmux has-session && exec tmux attach || exec tmux'"
#alias irssi="weechat"
alias irssi="irssi --home \${DOTFILES}/irssi --config \${DOTFILES}/irssi/config-\${DOTFILES_DISTRO}"
alias ln="ln -v"
alias mdl="mdl --config \${DOTFILES}/mdl/.mdlrc"
alias n="npm"
alias nude="nvm use default"
alias o="dko-open"
alias paclast="expac --timefmt='%Y-%m-%d %T' '%l\t%n' | sort | tail -20"
alias publicip="curl icanhazip.com"
alias py2="python2"
alias py3="python3"
alias py="python"
alias rsync='rsync --human-readable --partial --progress'
alias spip="sudo -H pip install"
alias tmux="tmux -f \${DOTFILES}/tmux/tmux.conf"
alias today="date +%Y-%m-%d"
alias tpr="tput reset"                # really clear the scrollback
alias u="__dotfiles_main"
alias vag="vagrant"
alias vb="VBoxManage"
alias vbm="VBoxManage"
alias weechat="weechat -d \${DOTFILES}/weechat"
alias wget="wget --no-check-certificate"

# sudo ops
alias mine='sudo chown -R $USER'
alias root="sudo -s"
alias se="sudo -e"

# editor
alias e="vopen"
alias v="vopen"
alias esa='e $DOTFILES/shell/aliases'
alias esf='e $DOTFILES/shell/functions'
alias esp='e $DOTFILES/shell/paths'
alias esv='e $DOTFILES/shell/vars'
alias ebr='e $BASH_DOTFILES/.bashrc.symlink'
alias ehosts="se /etc/hosts"
alias eoba='e $DOTFILES/linux/openbox/autostart.sh'
alias eobe='e $DOTFILES/linux/openbox/environment'
alias eobm='e $DOTFILES/linux/openbox/menu.xml'
alias eobr='e $DOTFILES/linux/openbox/rc.xml'
alias etint='e $DOTFILES/linux/tint2/tint2rc'
alias evf='e $VIM_DOTFILES/filetype.vim'
alias evl='e $HOME/.vimrc.local'
alias evm='e $VIM_DOTFILES/plugin/mappings.vim'
alias evr='e $VIM_DOTFILES/vimrc'
alias exr='e $DOTFILES/xresources/.Xresources'
alias erxvt='e $DOTFILES/xresources/urxvt.xresources'
alias elrxvt='e $DOTFILES/local/urxvt.xresources'
alias eze='e $ZDOTDIR/.zshenv.symlink'
alias ezr='e $ZDOTDIR/.zshrc'

_alias_ls() {
  local almost_all="-A" # switchted from --almost-all for old bash support
  local classify="-F" # switched from --classify for old bash support
  local colorized="--color=auto"
  local groupdirs="--group-directories-first"
  local long="-l"
  local single_column="-1"
  local timestyle=""

  if ! ls $groupdirs >/dev/null 2>&1; then
    groupdirs=""
  fi

  if [ "$DOTFILES_OS" = "Darwin" ]; then
    almost_all="-A"
    classify="-F"
    colorized="-G"
  fi

  if [ "$DOTFILES_OS" = "Linux" ] && [ "$DOTFILES_DISTRO" != "busybox" ]; then
    timestyle="--time-style=\"+%Y%m%d\""
  fi

  # shellcheck disable=SC2139
  alias ls="ls $colorized $classify $groupdirs $timestyle"
  # shellcheck disable=SC2139
  alias la="ls $almost_all"
  # shellcheck disable=SC2139
  alias l="ls $single_column $almost_all"
  # shellcheck disable=SC2139
  alias ll="l $long"
}
_alias_ls

_alias_darwin() {
  alias b="brew"
  alias bi="b install"
  alias bq="b list"
  alias bs="b search"

  # @TODO accept version
  alias rphp="brew services restart php56"
  # sudo since we run nginx on port 80 so needs admin
  alias rnginx="sudo brew services restart nginx"

  # electron apps can't focus if started using Electron symlink
  alias elec="/Applications/Electron.app/Contents/MacOS/Electron"

  # clear xattrs
  alias xc="xattr -c *"

  # Audio control - http://xkcd.com/530/
  alias stfu="osascript -e 'set volume output muted true'"
  alias pumpitup="osascript -e 'set volume 7'"
}

_alias_linux() {
  alias open="o"                    # use open() function in shell/functions
  alias startx="startx > \${DOTFILES}/logs/startx.log 2>&1"

  alias testnotification="notify-send \
    'Hello world!' \
    'This is an example notification.' \
    --icon=dialog-information"

  alias xkbreset="setxkbmap -layout us && xmodmap ~/.Xmodmap"
}

_alias_arch() {
  if command -v pacaur >/dev/null; then
    alias b="pacaur"
  elif command -v yaourt >/dev/null; then
    alias b="yaourt"
  fi
  alias bi="b -S"
  alias bq="b -Qs"
  alias bs="b -Ss"

  alias rphp="sudo systemctl restart php-fpm.service"
  alias rnginx="sudo systemctl restart nginx.service"
}

_alias_deb() {
  alias a="sudo aptitude -F \"%p %d %v\""
}

# os specific
case "$OSTYPE" in
  darwin*)  _alias_darwin ;;
  linux*)   _alias_linux
    case "$DOTFILES_DISTRO" in
      busybox)                  ;;
      archlinux)  _alias_arch   ;;
      debian)     _alias_deb    ;;
    esac
    ;;
esac

