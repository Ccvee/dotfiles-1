# sourced by both .zshrc and .bashrc, so keep it bash compatible
# NOT run by loader

alias reload="exec $SHELL"
alias _="sudo"
alias sudo="sudo " # allow sudo to use aliases

# paths and dirs
alias ..='cd ..'
alias ....='cd ../..'
alias cd..='cd ..'
alias gr='git rev-parse && cd "$(git rev-parse --show-cdup)"'
alias dirs="dirs -v"                  # default to vert, use -l for list
alias l="ls -AFl"
alias la="ls -AF"
alias ll="ls -AFl"
alias tree="tree -C"

# bin
alias a="sudo aptitude -F \"%p %d %v\""
alias b="brew"
alias c="composer"
alias f="find"
alias g="git"
alias n="npm"
alias pac="pacaur"
alias p="php"
alias py="python"
alias u="update"
alias v="vagrant"
alias vag="vagrant"
alias vb="VBoxManage"
alias vbm="VBoxManage"

# function-type aliases
alias publicip="curl icanhazip.com"

# copy with progress and backup instead of overwrite
alias cpv="rsync -poghb --backup-dir=/tmp/rsync -e /dev/null --progress --"

# default flags for programs
alias ag="ag -i"
alias df="df -h"
alias ln="ln -v"
alias rsync="rsync --human-readable --partial --progress --exclude-from=$HOME/.cvsignore"
alias wget="wget --no-check-certificate"

# quick edits
alias ealiases="e $DOTFILES/shell/aliases"
alias efunctions="e $DOTFILES/shell/functions"
alias epaths="e $BASH_DOTFILES/paths.sh"
alias ebashrc="e $BASH_DOTFILES/bashrc.sh"
alias elbashrc="e $HOME/.bashrc.local"
alias ehosts="sudo vim /etc/hosts"

# server
alias pyserve="python -m SimpleHTTPServer"

# os specific
case "$OSTYPE" in
  darwin*)
    alias ls="ls -G -p"

    # clear xattrs
    alias xc="xattr -c *"

    # Audio control - http://xkcd.com/530/
    alias stfu="osascript -e 'set volume output muted true'"
    alias pumpitup="osascript -e 'set volume 7'"
    ;;
  linux*)
    alias ls="ls --color=auto -p --time-style=\"+%Y%m%d\""
    alias open="o"
    ;;
esac
