{
  "codeLens.enable": true,
  "diagnostic.enable": true,
  "diagnostic.enableMessage": "jump",
  "diagnostic.enableSign": true,
  "diagnostic.locationlist": true,
  "diagnostic.errorSign": "⚑",
  "diagnostic.hintSign": "⚑",
  "diagnostic.infoSign": "⚑",
  "diagnostic.warningSign": "⚑",
  "diagnostic.refreshAfterSave": true,
  "diagnostic.virtualText": true,

  //"diagnostic.displayByAle": true,
  // When true, destroys loclist on insert (and kills neomake results)
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": " ⭐︎",

  // =========================================================================
  // Language Servers
  // =========================================================================

  "languageserver": {

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }

  },

  // =========================================================================
  // coc-eslint
  // =========================================================================

  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "npm",

  // =========================================================================
  // coc-tssserver
  // https://github.com/neoclide/coc-tsserver#configuration-options
  // =========================================================================

  "typescript.preferences.quoteStyle": "single",

  "javascript.preferences.quoteStyle": "single",
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
}
