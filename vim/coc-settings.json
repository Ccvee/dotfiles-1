{
  "codeLens.enable": true,
  "diagnostic.enable": false,
  "diagnostic.enableMessage": false,
  "diagnostic.enableSign": false,
  "diagnostic.locationlist": false,
  "diagnostic.errorSign": "⚑",
  "diagnostic.hintSign": "⚑",
  "diagnostic.infoSign": "⚑",
  "diagnostic.warningSign": "⚑",
  "diagnostic.refreshAfterSave": true,
  "diagnostic.virtualText": true,

  //"diagnostic.displayByAle": true,
  // When true, destroys loclist on insert (and kills neomake results)
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": " ⭐︎",
  "languageserver": {
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },

  // https://github.com/neoclide/coc-tsserver#configuration-options
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true
}
