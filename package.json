{
  "name": "dotfiles",
  "version": "0.0.1",
  "description": "@davidosomething/dotfiles",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "_header": "npx --quiet boxen-cli --padding 1",
    "_markdownlint": "npx --quiet markdownlint-cli --config ./markdownlint/config.json",
    "_parallel": "npx --quiet npm-run-all --silent --aggregate-output --parallel",
    "lint:editorconfig": "npm run --silent _header -- \"$npm_lifecycle_event\"    && npx --quiet echint",
    "lint:readme": "npm run --silent _header -- \"$npm_lifecycle_event\"          && npm run --silent _markdownlint -- ./README.md",
    "lint:readme:vim": "npm run --silent _header -- \"$npm_lifecycle_event\"      && npm run --silent _markdownlint -- ./vim/README.md",
    "lint:shell": "npm run --silent _header -- \"$npm_lifecycle_event\"           && shellcheck --exclude=SC1090,SC2148 --shell=sh -- shell/*.sh",
    "test": "npm run --silent _parallel -- lint:**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidosomething/dotfiles.git"
  },
  "author": "David O'Trakoun <me@davidosomething.com> (https://davidosomething.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidosomething/dotfiles/issues"
  },
  "homepage": "https://github.com/davidosomething/dotfiles#readme",
  "echint": {
    "ignore": [
      "**/*.md",
      "**/*.xml",
      "bitbar/*",
      "iterm2/*.itermcolors",
      "linux/**",
      "local/**",
      "logs/**",
      "mac/*.terminal",
      "openbox/**",
      "terminfo/**",
      "tests/**",
      "tmux/plugins/**",
      "vim/autoload/plug.vim*",
      "vim/spell/**",
      "vim/vendor/**",
      "weechat/**",
      "xresources/**"
    ]
  }
}
