{
  "name": "dotfiles",
  "private": true,
  "version": "0.0.1",
  "description": "@davidosomething/dotfiles",
  "engines": {
    "node": ">=10.15.3"
  },
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "_markdownlint": "npx --ignore-existing --quiet markdownlint-cli --config ./markdownlint/dot.markdownlintrc",
    "_parallel": "npx --ignore-existing --quiet npm-run-all --silent --aggregate-output --continue-on-error --parallel",
    "lint": "npm run --silent _parallel -- lint:**",
    "lint:editorconfig": "./bin/dko-header \"  ${npm_lifecycle_event}  \"                && npx --ignore-existing --quiet echint && echo ' ✓ passed\n'",
    "lint:bash:bashate": "./bin/dko-header \"  ${npm_lifecycle_event}  \"                && bashate --ignore=E003,E005,E006 -- $(npx --ignore-existing --quiet glob-cli2 \"{bash/*,**/*.bash}\") && echo ' ✓ passed\n'",
    "lint:bash:shellcheck": "./bin/dko-header \"  ${npm_lifecycle_event}  \"             && shellcheck --exclude=SC1090 --shell=bash -- $(npx --ignore-existing --quiet glob-cli2 \"{bash/*,**/*.bash}\") && echo ' ✓ passed\n'",
    "lint:python": "if [ -z \"$CI\" ]; then ./bin/dko-header \"  ${npm_lifecycle_event}  \"  && flake8 -- $(npx --ignore-existing --quiet glob-cli2 \"bitbar/mine/*.py\") && echo ' ✓ passed\n'; fi",
    "lint:readmes": "./bin/dko-header \"  ${npm_lifecycle_event}  \"                     && npm run --silent _markdownlint -- $(npx --ignore-existing --quiet glob-cli2 \"{.,*,vim/mine/*}/README.md\") && echo ' ✓ passed\n'",
    "lint:shell:shellcheck": "./bin/dko-header \"  ${npm_lifecycle_event}  \"            && shellcheck --exclude=SC1090,SC2148 --shell=sh -- $(npx --ignore-existing --quiet glob-cli2 \"{shell,bitbar/mine}/*.sh\") && echo ' ✓ passed\n'",
    "lint:vim:after": "./bin/dko-header \"  ${npm_lifecycle_event}  \"     && vint -- vim/after          && echo ' ✓ passed\n'",
    "lint:vim:autoload": "./bin/dko-header \"  ${npm_lifecycle_event}  \"  && vint -- vim/autoload/dko*  && echo ' ✓ passed\n'",
    "lint:vim:ftplugin": "./bin/dko-header \"  ${npm_lifecycle_event}  \"  && vint -- vim/ftplugin       && echo ' ✓ passed\n'",
    "lint:vim:rc": "./bin/dko-header \"  ${npm_lifecycle_event}  \"        && vint -- $(npx --ignore-existing --quiet glob-cli2 \"vim/{gvimrc,vimrc,*.vim}\") && echo ' ✓ passed\n'",
    "lint:vim:mine": "./bin/dko-header \"  ${npm_lifecycle_event}  \"      && vint -- vim/mine   && echo ' ✓ passed\n'",
    "lint:vim:plugin": "./bin/dko-header \"  ${npm_lifecycle_event}  \"    && vint -- vim/plugin && echo ' ✓ passed\n'",
    "lint:yaml": "./bin/dko-header \"  ${npm_lifecycle_event}  \"          && yamllint -- . && echo ' ✓ passed\n'",
    "pretest": "npm run --silent lint",
    "test": "./bootstrap/symlink",
    "posttest": "echo DONE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidosomething/dotfiles.git"
  },
  "author": "David O'Trakoun <me@davidosomething.com> (https://davidosomething.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidosomething/dotfiles/issues"
  },
  "homepage": "https://github.com/davidosomething/dotfiles#readme",
  "echint": {
    "ignore": [
      "**/*.md",
      "**/*.py",
      "**/*.xml",
      "bitbar/enabled/*",
      "bitbar/vendor/*",
      "hammerspoon/Spoons/**",
      "iterm2/*.itermcolors",
      "linux/**",
      "local/**",
      "logs/**",
      "mac/*.terminal",
      "meta/**",
      "openbox/**",
      "terminfo/**",
      "tests/**",
      "tmux/plugins/**",
      "vim/autoload/plug.vim*",
      "vim/spell/**",
      "vim/vendor/**",
      "weechat/**",
      "xresources/**"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-davidosomething": "3.0.0"
  }
}
