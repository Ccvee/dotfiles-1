# conky configuration

##############################################
# Settings
##############################################
# hardware settings
double_buffer yes
no_buffers yes

# placement
alignment top_left
gap_x 64
gap_y 48

# dimensions
minimum_size 200 200
maximum_width 240

# window
own_window yes
own_window_type conky
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 0
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# updating
update_interval 1.0
total_run_times 0

# painting
background no
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# colors
default_color ffffff
default_shade_color 000000
default_outline_color 828282

# text output
use_xft yes
xftfont Fira Mono for Powerline:size=8
xftalpha 1
cpu_avg_samples 2
uppercase no
short_units yes
override_utf8_locale no

##############################################
#  Output
##############################################
TEXT
