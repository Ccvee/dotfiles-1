#!/usr/bin/env bash

# echo git root if in a git repo, otherwise echo pwd

set -e

_maybe_git_root() {
  local git_root="."

  # check for git root
  if git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
    git_root="$(git rev-parse --show-toplevel)"
  fi

  echo ${git_root}
}

_maybe_git_root
