#!/usr/bin/env bash

# enginx
#
# Locate and edit the main nginx configuration file as root
#

_enginx() {
  local nginx_conf
  nginx_conf="$(sudo nginx -t 2>&1 | grep "configuration file" | head -n1 | sed -r 's/.*file (\S+) .*/\1/')"
  echo "Editing ${nginx_conf}..."
  sudo -e "$nginx_conf"
}

_enginx
