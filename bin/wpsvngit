#!/usr/bin/env bash

set -e

# http://wp.tutsplus.com/tutorials/plugins/publishing-wordpress-plug-ins-with-git/

svn log -r 1:HEAD --limit 1 http://plugins.svn.wordpress.org/$2

# output:
# r520657 | plugin-master | 2012-03-19 03:56:31 +0000 (Mon, 19 Mar 2012) | 1 line  

git svn clone -s -rXXXXXX --no-minimize-url http://plugins.svn.wordpress.org/your-plug-in-name
cd your-plugin-name
git svn fetch
git svn rebase

