# ~/.dotfiles/.zshalias
# sourced by .zshrc

alias dotfiles="zsh ~/.dotfiles/bootstrap.zsh"
# some of these paths are set in .zshenv.local!
alias mv="nocorrect mv"               # no spelling correction on mv
alias cp="nocorrect cp"
alias mkdir="nocorrect mkdir"
alias zshrc="$EDITOR ~/.zshrc"
alias reload="exec zsh"               # replace cur proc with new zsh, so env
                                      # will also be reloaded

# wordpress aliases, rely on git being in project folder
alias wpt="cdr; cd wp-content/themes"
alias wpp="cdr; cd wp-content/plugins"
