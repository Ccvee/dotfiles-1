root = true

[*]
charset = utf-8
end_of_line = LF
indent_size = 2
indent_style = space

# html is not minified so reduce character output by using real tabs
# use indent size 4 for parity with PHP
[*.{hbs,html,marko,mustache,xml}]
indent_style = tab
tab_width = 2

# sass-lint standards
[*.{css,less,sass,scss}]
insert_final_newline = true

# coffeelint standards
[*.coffee]
insert_final_newline = true

# jshint standards
[*.{js,json,jsx,ts,tsx}]
indent_size = 2
indent_style = space
insert_final_newline = true

[*.{markdown,md}]
indent_size = 2

# PHP http://make.wordpress.org/core/handbook/coding-standards/php/
[*.{blade,php}]
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4

[*.{bash,sh,zsh}]
max_line_length = 78

[*.yaml]
indent_size = 2
indent_style = space
